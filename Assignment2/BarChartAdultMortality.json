{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/JesseYow/FIT3179/main/Assignment2/Life-Expectancy-Data-Updated.csv"
  },
  "width": 800,
  "height": 500,
  "title": "Aduly Mortality per 1000 by Each Region",
  "params": [
    {
      "name": "Year_Selection",
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Year_Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year > 0"},
    {"filter": "Year_Selection == null || datum.Year == Year_Selection"},
    {
      "aggregate": [
        {"op": "sum", "field": "Adult_mortality", "as": "Adult Mortality"}
      ],
      "groupby": ["Region"]
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {"field": "Region", "type": "nominal"},
        "y": {"field": "Adult Mortality", "type": "quantitative"},
        "color": {"field": "Region", "type": "nominal"},
        "tooltip": [
          {"field": "Region", "type": "nominal", "title": "Region"},
          {
            "field": "Adult Mortality",
            "type": "quantitative",
            "title": "Adult_mortality",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 8.5,
        "fontWeight": "normal",
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 370},
        "y": {"value": 120},
        "text": {
          "value": "Africa consistently has the highest adult mortality throughout the years."
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 8.5,
        "fontWeight": "lighter",
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 650},
        "y": {"value": 400},
        "text": {
          "value": "North America consistenly has the lowest adult mortality throughout the years."
        }
      }
    }
  ],
  "config": {}
}